# Server Configuration
NODE_ENV=development
PORT=8000

# Database Configuration
MONGODB_URI=mongodb://admin:password@mongo:27017/coinclap?authSource=admin

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# CORS Configuration
CORS_ORIGINS=http://localhost:8000,http://localhost:8001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Redis Configuration (for future caching/sessions)
REDIS_URL=redis://localhost:6379

# Email Configuration (for future email features)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Cloud Storage (for future file uploads)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# Monitoring & Analytics (for future integrations)
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-newrelic-key

# External APIs (for future integrations)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
SENDGRID_API_KEY=SG.your-sendgrid-api-key

# Microservices Configuration (for future scaling)
SERVICE_NAME=user-service
SERVICE_VERSION=1.0.0
CONSUL_HOST=localhost
CONSUL_PORT=8500
